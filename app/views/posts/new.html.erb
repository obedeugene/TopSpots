
<div class="container">
   <h1>Add a New Spot</h1>
    <%= form_for @post do |f| %>
       <p>
         <%= f.label :title %>
         <br>
         <%= f.text_field :title %>
       </p>
       <p>
         <%= f.label :content %>
         <br>
         <%= f.text_area :content %>
       </p>
       <p>
         <%= f.submit "Add new Spot" %>
       </p>
    <% end %>
</div>